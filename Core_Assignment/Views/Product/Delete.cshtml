@model BusinessModel.ProductBO

<h3 style="color:darkred; font-weight:bolder; font-size:30px; font-family:'Comic Sans MS';">Are you sure you want to delete this?</h3>
<button style="width:50px; background-color:lightgreen; margin-left:3px; margin-top:5px;">
    <a asp-action="Index"><i class="fa fa-home fa-2x" style="color:darkred;"></i></a>
</button>

<br />
<br />
<div>


    <dl class="row" style="font-family:'Times New Roman'; font-style:italic; font-weight:bolder; font-size:20px; background-color:tomato; color:black; margin-left:5px;">
        <dt class="col-sm-2" style="margin-top:15px;">
            @Html.DisplayNameFor(model => model.Product_Image)
        </dt>
        <dd class="col-sm-10" style="margin-top:15px;">
            <img src="@Model.Product_Image" height="200px" width="200px" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product_Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product_Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product_Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product_Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product_Price)
        </dt>
        <dd class="col-sm-10">
            ₹ @Html.DisplayFor(model => model.Product_Price)
        </dd>
        <form asp-action="Delete" style="margin-left:200px;">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" style="background-color:black; color:whitesmoke;" />
            <br />
            <br />
        </form>
       
    </dl>
  


</div>
