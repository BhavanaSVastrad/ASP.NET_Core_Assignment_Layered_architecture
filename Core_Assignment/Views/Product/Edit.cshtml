@model BusinessModel.ProductBO

<h4 style="color:purple; font-family:'Trebuchet MS', 'Lucida Sans Unicode', 'Lucida Grande', 'Lucida Sans', Arial, sans-serif; font-style:italic; font-weight:bold; font-size:30px;">Edit Product</h4>
<button style="background-color:papayawhip; width:60px; margin-left:2px;">
    <a asp-action="Index"><i class="fa fa-home fa-2x" style="color:deeppink;"></i></a>
</button>
<br />
<br />
<div class="row" style="background-color:mediumpurple; font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif; font-style:italic; font-weight:bold; color:floralwhite; margin-left: 2px; ">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <br />
            <div class="form-group">
                <label asp-for="Product_Image" class="control-label"></label>
                <input asp-for="Product_Image" class="form-control" />
                <span asp-validation-for="Product_Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product_Name" class="control-label"></label>
                <input asp-for="Product_Name" class="form-control" />
                <span asp-validation-for="Product_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product_Description" class="control-label"></label>
                <input asp-for="Product_Description" class="form-control" />
                <span asp-validation-for="Product_Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product_Price" class="control-label"></label>
                <input asp-for="Product_Price" class="form-control" />
                <span asp-validation-for="Product_Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" style="background-color:antiquewhite; color:rebeccapurple;" />
            </div>
        </form>
    </div>
</div>

<br />
<br />
<br /><br />
<br />
<br />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
