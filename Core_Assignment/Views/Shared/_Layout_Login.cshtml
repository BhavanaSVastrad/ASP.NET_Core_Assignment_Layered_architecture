<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Core_Assignment</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3  " style="color:white;" >
            <div class="container">
               
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark btn-light" asp-area="" asp-controller="Home" asp-action="Index" ><i class="fa fa-home fa-1x"></i>Home</a>
                        </li>
                        <li class="nav-item" style="margin-left:10px;">
                            <a class="nav-link text-dark btn-light" asp-area="" asp-controller="Account" asp-action="Login"><i class="fa fa-sign-in fa-1x"></i>Login</a>
                        </li>
                        <li class="nav-item" style="margin-left:10px;">
                            <a class="nav-link text-dark btn-light" asp-area="" asp-controller="Account" asp-action="SignUp"><i class="fa fa-registered fa-1x"></i>Register</a>
                        </li>

                    </ul>

                </div>

                @if(User.Identity.IsAuthenticated)
                {
                <div class="navbar float-right">

                    <a class="btn btn-danger" asp-action="Logout" asp-controller="Account">Logout</a>

                </div>
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <br />
    <br />
    <br />
    <br />
   <style>
       .btn-light{
           color:black;
           font-weight:bold;
           border-radius:30px;
       }
   </style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
    @await Component.InvokeAsync("Notyf")

</body>
</html>
